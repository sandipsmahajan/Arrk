<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CharacterDetailsActivity"
    tools:showIn="@layout/activity_character_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/layout_margin"
        android:weightSum="1">

        <com.arrk.group.starwars.custom.STextView
            style="@style/LabelStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/label_name"
            app:text_font="semi_bold" />

        <com.arrk.group.starwars.custom.STextView
            android:id="@id/text_name"
            style="@style/DataStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            app:text_font="semi_bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/layout_margin"
        android:weightSum="1">

        <com.arrk.group.starwars.custom.STextView
            style="@style/LabelStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/label_height"
            app:text_font="semi_bold" />

        <com.arrk.group.starwars.custom.STextView
            android:id="@id/text_height"
            style="@style/DataStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            app:text_font="semi_bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/layout_margin"
        android:weightSum="1">

        <com.arrk.group.starwars.custom.STextView
            style="@style/LabelStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/label_mass"
            app:text_font="semi_bold" />

        <com.arrk.group.starwars.custom.STextView
            android:id="@id/text_mass"
            style="@style/DataStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            app:text_font="semi_bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/layout_margin"
        android:weightSum="1">

        <com.arrk.group.starwars.custom.STextView
            style="@style/LabelStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/label_created"
            app:text_font="semi_bold" />

        <com.arrk.group.starwars.custom.STextView
            android:id="@id/text_created"
            style="@style/DataStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            app:text_font="semi_bold" />
    </LinearLayout>
</LinearLayout>