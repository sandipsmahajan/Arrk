<resources>

    <style name="StarWarsTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="StarWarsTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="StarWarsTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LabelStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    <style name="ListLabelStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@drawable/list_text_color</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:padding">@dimen/layout_margin</item>
        <item name="android:layout_margin">@dimen/small_layout_margin</item>
        <item name="android:background">@drawable/shadow_item</item>
        <item name="text_font">semi_bold</item>
    </style>
    <style name="DataStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/data_value</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
</resources>
